<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
    <property name="APP_DIR" value="/home/data/siggi/instances/0320"/>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <jmxConfigurator/>

    <appender name="security" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${APP_DIR}/logs/security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${APP_DIR}/logs/security_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>5MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>


    <!-- SECURITY -->

    <logger name="org.springframework.security" level="debug" additivity="false">
        <appender-ref ref="security"/>
    </logger>


    <!-- MAIN -->

    <!-- Spring Auto Configuration Report -->
    <logger name="org.springframework" level="info"/>
    <logger name="org.springframework.boot.autoconfigure.logging" level="debug"/>
    <logger name="org.siggici.hookserver" level="info"/>

    <!-- <logger name="org.apache.catalina.valves.RemoteIpValve" level="DEBUG" /> -->


    <root level="warn">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>